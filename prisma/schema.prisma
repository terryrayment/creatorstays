// Audit log for all sensitive actions (admin actions, status changes, etc.)
model AuditLog {
  id          String   @id @default(cuid())
  
  // What action was performed
  action      String   // e.g., "offer.status_changed", "admin.impersonate", "user.suspended"
  
  // Who performed the action
  actorType   String   // "user", "admin", "system", "cron"
  actorId     String   // User ID or "system"
  actorEmail  String?  // Cached for readability in admin views
  
  // What was affected
  targetType  String   // e.g., "Offer", "CreatorProfile", "Collaboration"
  targetId    String   // ID of the affected record
  
  // Additional context
  metadata    Json     @default("{}")  // Flexible JSON for action-specific data
  
  // Request context (for user actions)
  ipAddress   String?
  userAgent   String?
  
  // Timestamp
  createdAt   DateTime @default(now())

  @@index([targetType, targetId])
  @@index([actorId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

// Analytics events for tracking user behavior and funnel metrics
model AnalyticsEvent {
  id          String   @id @default(cuid())
  
  // Who triggered the event
  actorType   String   // "creator", "host", "visitor", "system"
  actorId     String   // Profile ID or session ID for visitors
  
  // Event details
  eventType   String   // e.g., "offer_sent", "offer_responded", "profile_viewed", "collab_completed"
  eventData   Json     @default("{}")  // Event-specific payload
  
  // Session context (optional)
  sessionId   String?
  
  // Timestamp
  createdAt   DateTime @default(now())

  @@index([actorType, actorId, createdAt])
  @@index([eventType, createdAt])
  @@index([createdAt])
  @@map("analytics_events")
}
