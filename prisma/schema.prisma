// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER & AUTH
// ============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  // Relations
  creatorProfile CreatorProfile?
  hostProfile    HostProfile?
  accounts       Account[]
  sessions       Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================================
// CREATOR
// ============================================================================

// Trust tier enum for creator credibility
enum TrustTier {
  NEW       // Just joined, no signals
  VERIFIED  // OAuth complete + profile complete
  PROVEN    // At least one completed collaboration
}

// Readiness state for creator lifecycle
enum ReadinessState {
  INCOMPLETE    // Missing critical fields
  PENDING_OAUTH // Profile done, OAuth not complete
  READY         // Fully set up, can receive offers
}

model CreatorProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Basic info
  handle      String   @unique
  displayName String
  bio         String?  @db.Text
  location    String?
  avatarUrl   String?
  
  // Niches/categories
  niches      String[] // ["Travel", "Lifestyle", "Photography"]
  
  // Platform verticals this creator is interested in
  // Empty array = available on all platforms (default behavior)
  interestedVerticals  String[]  @default([]) // ["STR", "SPA", "FITNESS"]
  
  // Social platforms - self-reported handles
  instagramHandle   String?
  instagramUrl      String?
  tiktokHandle      String?
  tiktokUrl         String?
  youtubeHandle     String?
  youtubeUrl        String?
  youtubeSubscribers Int?
  
  // Instagram OAuth - verified connection
  instagramConnected      Boolean   @default(false)
  instagramAccountId      String?   // IG user ID from API
  instagramAccessToken    String?   // Encrypted access token
  instagramFollowers      Int?      // Verified follower count
  instagramLastSyncAt     DateTime? // Last successful sync
  instagramTokenExpiresAt DateTime? // When token expires
  
  // TikTok OAuth - verified connection
  tiktokConnected         Boolean   @default(false)
  tiktokOpenId            String?   // TikTok open_id
  tiktokAccessToken       String?   // Encrypted access token
  tiktokRefreshToken      String?   // For token refresh
  tiktokFollowers         Int?      // Verified follower count
  tiktokLastSyncAt        DateTime? // Last successful sync
  tiktokTokenExpiresAt    DateTime? // When token expires
  
  // Manual refresh rate limiting
  instagramLastManualRefresh DateTime?
  tiktokLastManualRefresh    DateTime?
  
  // Stats (auto-synced later)
  totalFollowers    Int?
  engagementRate    Float?
  avgViews          Int?
  
  // Deal preferences
  dealTypes         String[] // ["flat", "percent", "post-for-stay"]
  minimumFlatFee    Int?
  minimumPercent    Float?
  openToGiftedStays Boolean  @default(true)
  
  // Deliverables
  deliverables      String[] // ["Feed posts", "Reels", "Stories"]
  
  // Media kit
  mediaKitUrl       String?
  
  // Status
  isVerified        Boolean  @default(false)
  isActive          Boolean  @default(true)
  isPublic          Boolean  @default(false)  // Whether profile appears in public discovery (beta: always false)
  profileComplete   Int      @default(0) // Percentage 0-100
  
  // ============================================================================
  // INFRASTRUCTURE: Trust & Readiness (Phase 1)
  // ============================================================================
  
  // Trust tier - computed based on verification state and collaboration history
  trustTier             TrustTier       @default(NEW)
  
  // Readiness state - computed based on profile completeness
  readinessState        ReadinessState  @default(INCOMPLETE)
  
  // Blockers - JSON array of strings describing what's missing
  // e.g., ["instagram_not_connected", "deliverables_not_set", "minimum_rate_not_set"]
  readinessBlockers     Json            @default("[]")
  
  // Computed profile completeness (0.0 to 1.0)
  profileCompleteness   Float           @default(0)
  
  // Lifecycle tracking - first events
  firstOfferReceivedAt    DateTime?
  firstOfferRespondedAt   DateTime?
  firstCollabCompletedAt  DateTime?
  
  // ============================================================================
  
  // Beta access - tracks how creator was onboarded
  isBeta            Boolean  @default(false)    // True if signed up via invite
  inviteTokenUsed   String?                     // The invite token that was used
  
  // Stripe Connect
  stripeAccountId          String?   // Stripe Connect account ID
  stripeOnboardingComplete Boolean   @default(false)
  stripeChargesEnabled     Boolean   @default(false)
  stripePayoutsEnabled     Boolean   @default(false)
  
  // Onboarding status
  onboardingComplete       Boolean   @default(false)
  
  // Referral/Affiliate program
  referralCode      String?   @unique  // Their unique code to share
  referredBy        String?             // ID of creator who referred them
  referralEarnings  Int       @default(0)  // Total cents earned from referrals
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  conversations     Conversation[]
  offers            Offer[]
  collaborations    Collaboration[]

  @@map("creator_profiles")
}

// ============================================================================
// CREATOR INVITES (Private Beta Access)
// ============================================================================

model CreatorInvite {
  id          String    @id @default(cuid())
  
  // Token for invite URL (e.g., cs_beta_abc123)
  token       String    @unique
  
  // Usage limits
  maxUses     Int       @default(1)   // How many times this invite can be used
  uses        Int       @default(0)   // Current usage count
  
  // Expiration (optional)
  expiresAt   DateTime?               // If set, invite expires at this time
  
  // Audit trail
  createdBy   String?                 // Admin email or ID who created invite
  note        String?                 // Optional note (e.g., "For influencer X")
  
  // Revocation
  revoked     Boolean   @default(false)  // Set true to disable without deleting
  revokedAt   DateTime?
  revokedBy   String?
  
  createdAt   DateTime  @default(now())

  @@index([token])
  @@index([createdAt])
  @@map("creator_invites")
}

// ============================================================================
// HOST PROMO CODES
// ============================================================================

model HostPromoCode {
  id          String    @id @default(cuid())
  
  // The promo code (e.g., "LAUNCH2024", "FRIEND50")
  code        String    @unique
  
  // Discount settings
  discountType    String    @default("full")  // "full" = waive entire fee, "percent" = percentage off, "fixed" = fixed amount off
  discountAmount  Int?      // For percent: 50 = 50% off. For fixed: 50 = $50 off
  
  // Usage limits
  maxUses     Int?      // null = unlimited
  uses        Int       @default(0)
  
  // Validity
  isActive    Boolean   @default(true)
  expiresAt   DateTime?
  
  // Audit
  createdBy   String?   // Admin who created it
  note        String?   // e.g., "For podcast guests"
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Track who used it
  redemptions HostPromoRedemption[]

  @@index([code])
  @@map("host_promo_codes")
}

model HostPromoRedemption {
  id            String    @id @default(cuid())
  promoCodeId   String
  promoCode     HostPromoCode @relation(fields: [promoCodeId], references: [id])
  hostProfileId String
  
  // What they saved
  amountSaved   Int       // In cents
  
  createdAt     DateTime  @default(now())

  @@unique([promoCodeId, hostProfileId])
  @@map("host_promo_redemptions")
}

// ============================================================================
// CREATOR REFERRALS (Affiliate Program)
// ============================================================================

model CreatorReferral {
  id              String    @id @default(cuid())
  
  // Who referred whom
  referrerId      String    // CreatorProfile ID of referrer
  referredId      String    // CreatorProfile ID of new creator
  
  // Referral code used
  referralCode    String
  
  // Commission tracking
  commissionCents Int       @default(0)  // Amount earned (e.g., $10 = 1000)
  commissionPaid  Boolean   @default(false)
  paidAt          DateTime?
  
  // Status
  status          String    @default("pending")  // pending, qualified, paid
  qualifiedAt     DateTime?  // When referral completed onboarding
  
  createdAt       DateTime  @default(now())

  @@unique([referrerId, referredId])
  @@index([referrerId])
  @@index([referralCode])
  @@map("creator_referrals")
}

// ============================================================================
// AGENCY TEAM MEMBERS
// ============================================================================

model AgencyTeamMember {
  id              String    @id @default(cuid())
  
  // The agency host profile
  agencyHostId    String
  
  // Team member user
  userId          String
  
  // Role
  role            String    @default("member")  // owner, admin, member
  
  // Permissions
  canManageProperties   Boolean @default(true)
  canSendOffers         Boolean @default(true)
  canViewAnalytics      Boolean @default(true)
  canManageTeam         Boolean @default(false)
  
  // Status
  inviteStatus    String    @default("pending")  // pending, accepted, declined
  invitedAt       DateTime  @default(now())
  acceptedAt      DateTime?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([agencyHostId, userId])
  @@index([agencyHostId])
  @@index([userId])
  @@map("agency_team_members")
}

// ============================================================================
// HOST
// ============================================================================

// Platform vertical - which marketplace the host belongs to
enum Vertical {
  STR         // Short-term rentals (CreatorStays)
  SPA         // Spas & wellness centers
  FITNESS     // Gyms, yoga studios, fitness centers
  RESTAURANT  // Restaurants & cafes
  HOTEL       // Hotels & resorts
  EXPERIENCE  // Tours, activities, experiences
}

model HostProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Payment status
  membershipPaid      Boolean   @default(false)
  membershipPaidAt    DateTime?
  membershipAmount    Int?      // Amount paid in cents (19900 = $199)
  stripePaymentId     String?   // Stripe PaymentIntent ID
  promoCodeUsed       String?   // If they used a promo code
  
  // Platform vertical
  vertical      Vertical  @default(STR)
  businessType  String?   // Freeform: "yoga studio", "day spa", "CrossFit gym", etc.
  
  // Basic info
  displayName String
  bio         String?  @db.Text
  location    String?
  avatarUrl   String?
  contactEmail String?
  
  // Style preferences
  styleTags   String[] // ["Luxury", "Family-friendly", "Remote-work"]
  
  // Taste optimizer
  idealGuests String[] // ["Couples", "Families", "Remote workers"]
  vibes       String[] // ["Minimal", "Cozy", "Modern"]
  houseRules  String[] // ["No parties", "Pets allowed"]
  
  // Onboarding status
  onboardingComplete Boolean @default(false)
  
  // Creator matching preferences (JSON)
  creatorPrefs Json?  // { locationPref, niches, audienceSize, contentStyle, budgetRange }
  contentGoals Json?  // { contentTypes, usageRights, postingGoal, primaryGoal }
  
  // Response time expectation
  responseTime String?  // "within-24h", "1-2-days", "3-5-days", "1-week"
  
  // Agency Pro subscription ($199/month)
  isAgency            Boolean   @default(false)
  agencyName          String?
  agencySubscriptionId String?   // Stripe subscription ID
  agencySubscribedAt  DateTime?
  agencyExpiresAt     DateTime?
  teamSeats           Int       @default(1)  // How many team members allowed
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  properties     Property[]
  conversations  Conversation[]
  offers         Offer[]
  collaborations Collaboration[]
  invitedOwners  PropertyOwner[]  // Property owners this agency has invited

  @@map("host_profiles")
}

// ============================================================================
// PROPERTY / LISTING
// ============================================================================

model Property {
  id              String   @id @default(cuid())
  hostProfileId   String
  hostProfile     HostProfile @relation(fields: [hostProfileId], references: [id], onDelete: Cascade)
  
  // Platform vertical (inherited from host, but can be overridden)
  vertical        Vertical  @default(STR)
  venueType       String?   // "cabin", "spa", "yoga studio", "gym", "restaurant"
  
  // External links
  airbnbUrl       String?   // Link to Airbnb/VRBO listing for creators to verify
  icalUrl         String?   // iCal URL for calendar sync (availability)
  
  // Calendar sync state (enhanced for reliability)
  lastCalendarSync     DateTime? // Last time we attempted a sync (renamed from lastCalendarSync)
  lastCalendarSyncAt   DateTime? // Alias for UI compatibility
  lastCalendarSyncStatus String?  // 'ok' | 'failed' | 'not_modified'
  lastCalendarSyncError  String?  // Short error message if failed
  lastCalendarSyncDebug  Json?    // Debug info blob
  icalEtag             String?   // For conditional requests (If-None-Match)
  icalLastModified     String?   // For conditional requests (If-Modified-Since)
  
  blockedDates    Json?     // Array of {start, end, summary, uid, source} for blocked periods
  lastImportedAt  DateTime?
  
  // Listing info
  title           String?
  cityRegion      String?
  priceNightlyRange String?  // e.g. "$150-$250" (or price range for services)
  rating          Float?
  reviewCount     Int?
  
  // Property details (flexible for different verticals)
  guests          Int?      // Capacity
  beds            Int?      // STR-specific
  baths           Int?      // STR-specific
  amenities       String[]  // ["WiFi", "Pool", "Hot Tub", ...] or ["Sauna", "Steam Room", ...]
  vibeTags        String[]  // ["Cozy", "Modern", "Remote", ...]
  houseRules      Json?     // { "checkIn": "3pm", "checkOut": "11am", "noSmoking": true, ... }
  
  // Photos (URLs)
  photos          String[]
  heroImageUrl    String?
  
  // Creator collaboration
  creatorBrief    String?   @db.Text
  
  // Status
  isActive        Boolean  @default(true)
  isDraft         Boolean  @default(true)
  // TODO: Consider implementing TTL cleanup for stale drafts
  // Draft properties that remain incomplete for 30+ days could be:
  // - Auto-deleted by a cron job
  // - Marked for cleanup and surfaced in admin dashboard
  // This prevents accumulation of abandoned draft properties.
  
  // Boosted listing (paid promotion)
  isBoosted       Boolean   @default(false)
  boostExpiresAt  DateTime?
  boostPurchasedAt DateTime?
  boostStripeSubId String?   // Stripe subscription ID
  
  // Owner organization (for agencies)
  ownerName       String?   // Name of property owner (for agency organization)
  ownerGroup      String?   // Portfolio/group name
  
  // Tracking
  trackingToken   String   @unique @default(cuid())
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  trackingLinks   TrackingLink[]
  collaborations  Collaboration[]
  offers          Offer[]
  propertyOwners  PropertyOwner[]
  manualBlocks    PropertyManualBlock[]

  @@unique([hostProfileId, airbnbUrl])
  @@index([hostProfileId])
  @@map("properties")
}

// Manual availability blocks (for dates not in iCal)
model PropertyManualBlock {
  id          String   @id @default(cuid())
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  startDate   String   // YYYY-MM-DD format
  endDate     String   // YYYY-MM-DD format (exclusive, same as iCal convention)
  note        String?  // Optional note for this block
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([propertyId])
  @@map("property_manual_blocks")
}

// ============================================================================
// TRACKING & ATTRIBUTION
// ============================================================================

model AffiliateLink {
  id                    String   @id @default(cuid())
  token                 String   @unique @default(cuid())
  
  // Parties
  creatorId             String
  hostId                String
  propertyId            String?
  campaignId            String?
  campaignName          String?
  
  // Destination
  destinationUrl        String
  
  // Attribution settings
  attributionWindowDays Int      @default(30)
  
  // Stats (denormalized for quick reads)
  clickCount            Int      @default(0)
  uniqueClickCount      Int      @default(0)
  
  // Status
  isActive              Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  expiresAt             DateTime?

  // Relations
  clicks                LinkClick[]
  collaboration         Collaboration?

  @@index([creatorId])
  @@index([hostId])
  @@index([token])
  @@map("affiliate_links")
}

model LinkClick {
  id              String   @id @default(cuid())
  linkId          String
  link            AffiliateLink @relation(fields: [linkId], references: [id], onDelete: Cascade)
  
  // Visitor tracking
  visitorId       String?
  visitor         LinkVisitor? @relation(fields: [visitorId], references: [id])
  
  // Click metadata (privacy-safe)
  referer         String?
  userAgentHash   String?
  ipHash          String?
  
  // Flags
  isUnique        Boolean  @default(true)
  isRevisit       Boolean  @default(false)
  
  createdAt       DateTime @default(now())

  @@index([linkId, createdAt])
  @@index([visitorId])
  @@map("link_clicks")
}

model LinkVisitor {
  id            String   @id // This is the cookie ID (cs_vid)
  
  firstSeenAt   DateTime @default(now())
  lastSeenAt    DateTime @default(now())
  
  // Last attribution
  lastLinkId    String?
  lastClickAt   DateTime?
  
  // Relations
  clicks        LinkClick[]

  @@map("link_visitors")
}

// Legacy tracking (keep for backwards compatibility)
model TrackingLink {
  id            String   @id @default(cuid())
  token         String   @unique @default(cuid())
  
  propertyId    String
  property      Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  // Optional: associate with specific creator/campaign
  creatorId     String?
  campaignName  String?
  
  destinationUrl String
  
  // Stats
  clickCount    Int      @default(0)
  uniqueClicks  Int      @default(0)
  
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  expiresAt     DateTime?

  // Relations
  clicks        Click[]

  @@map("tracking_links")
}

model Click {
  id              String   @id @default(cuid())
  trackingLinkId  String
  trackingLink    TrackingLink @relation(fields: [trackingLinkId], references: [id], onDelete: Cascade)
  
  // Click metadata
  clickedAt       DateTime @default(now())
  ipHash          String?  // Hashed for privacy
  userAgent       String?  @db.Text
  referer         String?
  country         String?
  city            String?
  device          String?  // "mobile", "desktop", "tablet"
  
  // Attribution
  attributionId   String?  // Links multiple clicks from same user
  isUnique        Boolean  @default(true)
  isRevisit       Boolean  @default(false)

  @@index([trackingLinkId, clickedAt])
  @@map("clicks")
}

// ============================================================================
// MESSAGING & OFFERS
// ============================================================================

model Conversation {
  id              String   @id @default(cuid())
  
  hostProfileId   String
  hostProfile     HostProfile @relation(fields: [hostProfileId], references: [id], onDelete: Cascade)
  
  creatorProfileId String
  creatorProfile  CreatorProfile @relation(fields: [creatorProfileId], references: [id], onDelete: Cascade)
  
  // Optional link to collaboration
  collaborationId String?  @unique
  collaboration   Collaboration? @relation(fields: [collaborationId], references: [id])
  
  // Metadata
  lastMessageAt   DateTime @default(now())
  hostUnread      Int      @default(0)
  creatorUnread   Int      @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  messages        Message[]
  
  @@unique([hostProfileId, creatorProfileId])
  @@index([hostProfileId, lastMessageAt])
  @@index([creatorProfileId, lastMessageAt])
  @@map("conversations")
}

model Message {
  id              String   @id @default(cuid())
  
  conversationId  String
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  // Sender (either host or creator)
  senderType      String   // "host" or "creator"
  senderId        String   // hostProfileId or creatorProfileId
  
  // Message content
  body            String   @db.Text
  
  // Metadata
  isRead          Boolean  @default(false)
  sentAt          DateTime @default(now())
  readAt          DateTime?

  @@index([conversationId, sentAt])
  @@map("messages")
}

model Offer {
  id              String   @id @default(cuid())
  
  hostProfileId   String
  hostProfile     HostProfile @relation(fields: [hostProfileId], references: [id], onDelete: Cascade)
  
  creatorProfileId String
  creatorProfile  CreatorProfile @relation(fields: [creatorProfileId], references: [id], onDelete: Cascade)
  
  propertyId      String?
  property        Property? @relation(fields: [propertyId], references: [id])
  
  // Deal type: "flat", "flat-with-bonus", "post-for-stay"
  offerType       String   
  
  // Cash portion (in cents, 0 for stay-only deals)
  cashCents       Int      @default(0)
  
  // Legacy field (use cashCents instead)
  flatAmount      Int?     
  percentAmount   Float?
  
  // Stay details (for post-for-stay deals)
  stayNights      Int?
  stayStartDate   DateTime?
  stayEndDate     DateTime?
  
  // Traffic bonus (for flat-with-bonus deals)
  trafficBonusEnabled   Boolean @default(false)
  trafficBonusThreshold Int?    // Click/view threshold to unlock bonus
  trafficBonusCents     Int?    // Bonus amount in cents
  
  // Requirements
  requirements    String?  @db.Text
  deliverables    String[] // ["2 Reels", "5 Stories", "1 Feed Post"]
  
  // Status
  status          String   @default("pending") // "pending", "accepted", "declined", "countered", "expired", "withdrawn"
  
  // Counter offer fields
  counterCashCents  Int?
  counterMessage    String?  @db.Text
  
  // Negotiation tracking
  negotiationRound  Int      @default(1) // Tracks back-and-forth: 1=initial, 2=first counter, 3=re-counter, etc.
  lastCounterBy     String?  // "host" or "creator" - who made the last counter

  // ============================================================================
  // INFRASTRUCTURE: Offer Audit Trail (Phase 1)
  // ============================================================================
  
  // Frozen snapshot of offer terms at time of send (immutable)
  // Stored as JSON: { offerType, cashCents, stayNights, deliverables, requirements, ... }
  originalTermsSnapshot   Json?
  
  // Status change history - array of { fromStatus, toStatus, changedBy, changedAt, reason? }
  statusHistory           Json      @default("[]")
  
  // Computed total value in cents (cash + estimated stay value)
  totalValueCents         Int?
  
  // Validation state
  isValid                 Boolean   @default(true)
  validationErrors        Json      @default("[]")  // Array of error strings
  
  // ============================================================================

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  expiresAt       DateTime?
  respondedAt     DateTime?
  hostViewedAt    DateTime?  // When host viewed creator's response (for read receipts)

  // Relations
  collaboration   Collaboration?

  @@index([hostProfileId, status])
  @@index([creatorProfileId, status])
  @@map("offers")
}

// ============================================================================
// COLLABORATIONS (Active deals)
// ============================================================================

model Collaboration {
  id              String   @id @default(cuid())
  
  offerId         String   @unique
  offer           Offer    @relation(fields: [offerId], references: [id])
  
  creatorId       String
  creator         CreatorProfile @relation(fields: [creatorId], references: [id])
  
  hostId          String
  host            HostProfile @relation(fields: [hostId], references: [id])
  
  propertyId      String
  property        Property @relation(fields: [propertyId], references: [id])
  
  // Status tracking - NEW FLOW:
  // "pending-agreement" -> Agreement signing phase
  // "active" -> Creator is preparing content
  // "content-uploaded" -> Creator uploaded content for review
  // "approved" -> Host approved content, creator gets tracking link
  // "content-live" -> Creator posted content with tracking link
  // "completed" -> All done, payment processed
  // "cancelled" -> Collaboration was cancelled
  status          String   @default("pending-agreement")
  
  // Affiliate link (generated when collaboration starts)
  affiliateLinkId String?  @unique
  affiliateLink   AffiliateLink? @relation(fields: [affiliateLinkId], references: [id])
  affiliateToken  String?  @unique // Short token for URL: cs.link/abc123
  
  // Content delivery - NEW FLOW:
  // 1. Creator uploads content files for approval (uploadedContentUrls)
  // 2. Host reviews and approves
  // 3. Creator gets tracking link and posts content live
  // 4. Creator submits live content links (contentLinks)
  // 5. Analytics track clicks
  
  // Uploaded content for approval (before posting live)
  uploadedContentUrls   String[]  // URLs to uploaded files (videos, images) for host review
  uploadedContentNotes  String?   @db.Text // Creator's notes about the content
  contentUploadedAt     DateTime? // When creator uploaded content for review
  
  // Host review
  contentApprovedAt     DateTime? // When host approved the content
  contentRejectedAt     DateTime? // When host requested changes
  hostFeedback          String?   @db.Text // Feedback from host (approval notes or change requests)
  
  // Live content (after posting)
  contentLinks          String[]  // URLs to LIVE posted content
  contentSubmittedAt    DateTime? // When creator confirmed content is live
  contentConfirmedAt    DateTime? // When we confirmed the live links are valid
  
  // Timeline
  contentDeadline DateTime? // When content must be posted
  linkActiveUntil DateTime? // How long the tracking link stays active
  deadline3DayWarningAt DateTime? // When we sent the 3-day warning email
  deadline1DayWarningAt DateTime? // When we sent the 1-day warning email
  deadlineDayOfWarningAt DateTime? // When we sent the day-of warning email
  deadlineWarningAt DateTime? // Legacy: original warning field
  deadlinePassedAt DateTime? // When we marked the deadline as passed
  
  // Results
  clicksGenerated Int      @default(0)
  
  // Payment (tracked, but settled off-platform for now)
  paymentStatus   String   @default("pending") // "pending", "processing", "completed", "failed"
  paymentNotes    String?  @db.Text
  settledAt       DateTime?
  
  // Stripe payment
  paymentIntentId String?   // Stripe PaymentIntent ID
  paymentAmount   Int?      // Amount in cents
  paidAt          DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  completedAt     DateTime?

  // Relations
  agreement       CollaborationAgreement?
  conversation    Conversation?
  reviews         Review[]
  disputes        Dispute[]

  @@map("collaborations")
}

// Reviews for completed collaborations
model Review {
  id              String   @id @default(cuid())
  
  collaborationId String
  collaboration   Collaboration @relation(fields: [collaborationId], references: [id], onDelete: Cascade)
  
  // Reviewer (who wrote this review)
  reviewerType    String   // "host" or "creator"
  reviewerId      String   // hostProfileId or creatorProfileId
  
  // Reviewee (who is being reviewed)
  revieweeType    String   // "host" or "creator"
  revieweeId      String   // hostProfileId or creatorProfileId
  
  // Rating (1-5 stars)
  rating          Int      // 1-5
  
  // Review content
  title           String?
  body            String?  @db.Text
  
  // Specific ratings (optional)
  communicationRating   Int?  // 1-5
  professionalismRating Int?  // 1-5
  qualityRating         Int?  // 1-5 (content quality for creators, property accuracy for hosts)
  
  // Status
  isPublic        Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([collaborationId, reviewerType])
  @@index([revieweeId, revieweeType])
  @@map("reviews")
}

// Legal agreement stored for each collaboration
model CollaborationAgreement {
  id                String   @id @default(cuid())
  
  collaborationId   String   @unique
  collaboration     Collaboration @relation(fields: [collaborationId], references: [id], onDelete: Cascade)
  
  // Agreement version (for tracking changes to template)
  version           String   @default("1.0")
  
  // Parties
  hostName          String
  hostEmail         String
  creatorName       String
  creatorHandle     String
  creatorEmail      String
  
  // Property
  propertyTitle     String
  propertyLocation  String?
  propertyUrl       String?
  
  // Deal terms (snapshot at time of agreement)
  dealType          String   // "flat", "flat-with-bonus", "post-for-stay"
  cashAmount        Int      // In cents
  stayIncluded      Boolean  @default(false)
  stayNights        Int?
  stayDates         String?  // Human readable date range
  
  // Bonus terms
  bonusEnabled      Boolean  @default(false)
  bonusAmount       Int?     // In cents
  bonusThreshold    Int?     // Click threshold
  
  // Deliverables
  deliverables      String[] // ["2 Instagram Reels", "5 Stories"]
  contentDeadline   DateTime?
  
  // Platform fees (15% each side)
  hostFeePercent    Float    @default(15)
  creatorFeePercent Float    @default(15)
  
  // Full agreement text (generated and stored)
  agreementText     String   @db.Text
  
  // Signatures
  hostAcceptedAt    DateTime?
  hostIpAddress     String?
  creatorAcceptedAt DateTime?
  creatorIpAddress  String?
  
  // Both must accept for agreement to be valid
  isFullyExecuted   Boolean  @default(false)
  executedAt        DateTime?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("collaboration_agreements")
}

