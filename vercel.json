{
  "functions": {
    "src/app/api/upload/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/sync-calendars/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/admin-daily-digest",
      "schedule": "30 3 * * *"
    },
    {
      "path": "/api/cron/process-expired-offers",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/process-content-deadlines",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/sync-calendars",
      "schedule": "0 */6 * * *"
    }
  ]
}
